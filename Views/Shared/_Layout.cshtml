                <p class="mb-0"><i class="fa fa-whatsapp text-primary mr-3"></i>0450095524</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                            <a asp-controller="Home" asp-action="ShopProducts" class="nav-item nav-link">Shop</a>
                            <a class="text-dark mb-2" href="cart.html"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                            <a class="text-dark mb-2" href="checkout.html"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
                            <a asp-controller="Home" asp-action="About" class="nav-item nav-link">About</a>
                        </div>
                    </div>
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link">Home</a>
                            <a asp-controller="Home" asp-action="ShopProducts" class="nav-item nav-link">Shop</a>
                            <a class="text-dark mb-2" href="cart.html"><i class="fa fa-angle-right mr-2"></i>Shopping Cart</a>
                            <a class="text-dark mb-2" href="checkout.html"><i class="fa fa-angle-right mr-2"></i>Checkout</a>
