                            <a asp-controller="Home" asp-action="ShopProducts" class="nav-item nav-link">Shop</a>
                            @* <a class="nav-item nav-link" href="#">Shop Detail</a> *@
                            @* <a class="nav-item nav-link" href="#">Contact</a> *@
                            <a asp-controller="Home" asp-action="About" class="nav-item nav-link">About</a>
                           
                            
                        </div>
