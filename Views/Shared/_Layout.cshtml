                            <a asp-controller="Users" asp-action="Register" class="nav-item nav-link">Register</a>
                        </div> *@
                        <div class="navbar-nav ml-auto py-0">

                            @*  USER LOGGED IN *@
                            @if (!string.IsNullOrEmpty(userName))
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle d-flex align-items-center"
                                       data-toggle="dropdown">
                                        <i class="fa fa-user-circle mr-2"></i>
                                        <span>@userName</span>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right">

                                        @* Admin only *@
                                        @if (roleId == "1")
                                        {
                                            <a asp-controller="Home" asp-action="Admin" class="dropdown-item">
                                                Admin Dashboard
                                            </a>
                                        }

                                        <a asp-controller="Account" asp-action="Profile" class="dropdown-item">
                                            My Profile
                                        </a>

                                        <div class="dropdown-divider"></div>

                                        <a asp-controller="Account" asp-action="Logout" class="dropdown-item text-danger">
                                            Logout
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                @* USER LOGGED OUT *@
                                <a asp-controller="Account" asp-action="Login" class="nav-item nav-link">Login</a>
                                <a asp-controller="Users" asp-action="Register" class="nav-item nav-link">Register</a>
                            }

                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <!-- Navbar End -->
    <!-- MAIN CONTENT -->
    <div class="container-fluid">
        @RenderBody()
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-flex align-items-center">
                    <img src="~/img/logo.jpg"
