@{
    ViewData["Title"] = "Purchase Report";
    Layout = "_AdminLayout";
}
@model List<PurchaseReportVM>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
@@media print {

    body * {
        visibility: hidden;
    }

    #printArea, #printArea * ,
    #printHeader {
        visibility: visible;
    }

    #printHeader {
        display: block !important;
        position: absolute;
        top: 0;
        width: 100%;
        text-align: center;
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    #printArea {
        position: absolute;
        left: 0;
        top: 50px;   /* pushes table below heading */
        width: 100%;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid black;
        padding: 6px;
    }
}
</style>


<div class="container mt-4">

    <div class="card shadow p-4 mb-4">
        <h3 class="mb-3">📊 Purchase Report</h3>

        <form asp-action="Index" asp-controller="PurchaseReport" method="post"
              class="row g-3 align-items-end">

            <div class="col-md-3">
                <label class="form-label">From Date</label>
                <input type="date" class="form-control" name="fromDate"
                       value="@ViewBag.FromDate" />
            </div>

            <div class="col-md-3">
                <label class="form-label">To Date</label>
                <input type="date" class="form-control" name="toDate"
                       value="@ViewBag.ToDate" />
            </div>

            <div class="col-md-3">
                <label class="form-label">Supplier</label>
                <select class="form-select" name="supplierId">
                    <option value="">-- All Suppliers --</option>

                    @foreach (Microsoft.AspNetCore.Mvc.Rendering.SelectListItem s in ViewBag.Suppliers)
                    {
                        <option value="@s.Value"
                                selected="@(ViewBag.SupplierId == s.Value)">
                            @s.Text
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <button class="btn btn-primary w-100" type="submit">🔍 Search</button>
            </div>

            <input type="hidden" name="hfFromDate" value="@ViewBag.FromDate" />
            <input type="hidden" name="hfToDate" value="@ViewBag.ToDate" />
            <input type="hidden" name="hfSupplierId" value="@ViewBag.SupplierId" />

            <div class="col-md-12 text-end">
                <a class="btn btn-outline-secondary btn-sm"
                   href="@Url.Action("Index","PurchaseReport")">
                    Clear Filter
                </a>
            </div>
        </form>
    </div>

    <div class="d-flex justify-content-end mb-3 gap-2">

        <a class="btn btn-success"
           href="@Url.Action("ExportToExcel","PurchaseReport",
             new {
                fromDate = ViewBag.FromDate,
                toDate = ViewBag.ToDate,
                supplierId = ViewBag.SupplierId
             })">
            📥 Export to Excel
        </a>

        <!-- ✅ Correct Print Button -->
        <button type="button"
                class="btn"
                style="background:#c9ab82; color:#000;"
                onclick="window.print()">
            Print
        </button>

    </div>

    @if (ViewBag.Msg != null)
    {
        <div class="alert alert-warning text-center">@ViewBag.Msg</div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No records found.
        </div>
    }
    else
    {
        <h3 id="printHeader" class="mb-3 text-center d-none">
    📊 Purchase Report
</h3>

        <div class="table-responsive" id="printArea">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice No</th>
                        <th>Invoice Date</th>
                        <th>Supplier</th>
                        <th>Variant Code</th>
                        <th>Product Name</th>
                        <th>Qty</th>
                        <th>Rate</th>
                        <th>Disc Amt</th>
                        <th>Net Amount</th>
                        <th>Total Taxable</th>
                        <th>Total Tax</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.InvoiceNo</td>
                            <td>@item.InvoiceDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.SupplierName</td>
                            <td>@item.VarientCode</td>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Rate</td>
                            <td>@item.DiscAmount</td>
                            <td>@item.NetAmount</td>
                            <td>@item.TotalTaxable</td>
                            <td>@item.TotalTax</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
