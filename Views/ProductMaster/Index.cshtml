@{
    ViewData["Title"] = "Product Master";
    Layout = "_AdminLayout";
}

<h2>Product Master</h2>
<a href="/ProductMaster/List">View Products</a>


@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<form method="post" action="/ProductMaster/SaveProduct" enctype="multipart/form-data">

    <!-- ================= PRODUCT DETAILS ================= -->
    <div class="card p-3 mb-4">
        <h4>Product Details</h4>

        <label>Product Code</label>
        <input type="text" name="ProductCode" class="form-control" required />

        <label class="mt-2">Product Name</label>
        <input type="text" name="ProductName" class="form-control" required />

        <label class="mt-2">Brand</label>
        <input type="text" name="Brand" class="form-control" required />

        <label class="mt-2">Description</label>
        <textarea name="ProductDescription" class="form-control"></textarea>

        <label class="mt-2">Occasion</label>
        <select name="Occasion" class="form-control">
            <option>Wedding</option>
            <option>Party</option>
            <option>Casual</option>
            <option>Festival</option>
        </select>

        <label class="mt-2">Combo Package</label>
        <select name="ComboPackage" class="form-control">
            <option>Single</option>
            <option>Combo 2</option>
            <option>Combo 3</option>
        </select>

        <label class="mt-2">HSN No</label>
        <input type="text" name="HSNNo" class="form-control" />

        <label class="mt-2">Barcode No</label>
        <input type="text" name="BarcodeNo" class="form-control" />
    </div>

    <!-- ================= CATEGORY DETAILS ================= -->
    <div class="card p-3 mb-4">
        <h4>Category Details</h4>

        <label>Category</label>
        <select name="SelectedCategoryId" id="ddlCategory" class="form-control" required>
            <option value="">-- Select Category --</option>
        </select>

        <h5 class="mt-3">Specifications</h5>
        <div id="specContainer" class="border p-3">
            <span class="text-muted">Select category to load specs</span>
        </div>
    </div>

    <!-- ================= COLOR & SIZE ================= -->
    <div class="card p-3 mb-4">
        <h4>Color & Size Variants</h4>

        <table class="table table-bordered" id="variantTable">
            <thead>
                <tr>
                    <th>Color</th>
                    <th>Size</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

        <button type="button" class="btn btn-secondary" onclick="addVariant()">+ Add Variant</button>
    </div>

    <!-- ================= IMAGES ================= -->
    <div class="card p-3 mb-4">
        <h4>Product Images</h4>

        <label>Main Image</label>
        <input type="file" name="Image" class="form-control" required />

        <label class="mt-2">Image 2</label>
        <input type="file" name="Image2" class="form-control" />

        <label class="mt-2">Image 3</label>
        <input type="file" name="Image3" class="form-control" />

        <label class="mt-2">Image 4</label>
        <input type="file" name="Image4" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Product</button>

</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // Load categories
        $(document).ready(function () {
            $.get("/Category/GetAll", function (data) {
                $.each(data, function (i, c) {
                    $("#ddlCategory").append(`<option value="${c.categoryId}">${c.categoryName}</option>`);
                });
            });
        });

        $(document).ready(function () { debugger;
            $.get("/ProductMaster/GetAll", function (data) {
                $("#ddlCategory").empty()
                    .append('<option value="">-- Select Category --</option>');

                $.each(data, function (i, c) {
                    $("#ddlCategory").append(
                        `<option value="${c.categoryId}">${c.categoryName}</option>`
                    );
                });
            });
        });
 


        // Load specs
        $("#ddlCategory").change(function () {
            var catId = $(this).val();
            $("#specContainer").empty();

            if (catId === "") return;

            $.post("/ProductMaster/GetSpecifications", { categoryId: catId }, function (data) {
                $.each(data, function (i, s) {
                    $("#specContainer").append(`
                        <label>${s.specName}</label>
                        <input type="text" name="Specs[${s.id}]" class="form-control mb-2" />
                    `);
                });
            });
        });

        // Variants
        function addVariant() {
            $("#variantTable tbody").append(`
                <tr>
                    <td><input type="text" name="colour[]" class="form-control" required /></td>
                    <td><input type="text" name="size[]" class="form-control" required /></td>
                    <td><button type="button" class="btn btn-danger btn-sm" onclick="$(this).closest('tr').remove()">X</button></td>
                </tr>
            `);
        }
    </script>
}
