@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<h2 class="mb-3">Add Category Specifications</h2>

<div class="card p-4">

    <!-- CATEGORY DROPDOWN -->
    <div class="mb-3">
        <label class="form-label">Select Category</label>
        <select id="categoryDropdown" class="form-select">
            <option value="">-- Select Category --</option>
        </select>
    </div>

    <!-- ADD SPEC -->
    <div class="mb-3 d-flex gap-2">
        <input type="text"
               id="specName"
               class="form-control"
               placeholder="Specification Name (eg: Length)" />

        <button class="btn btn-primary" onclick="addSpecification()">
            Add
        </button>
    </div>

    <!-- SPEC LIST -->
    <h5>Specifications</h5>
    <ul class="list-group" id="specList"></ul>

</div>
