@model MIEL.web.Models.EntityModels.MainCategory
@{
    ViewData["Title"] = "Edit Main Category";
    Layout = "_AdminLayout";
}

<h3 class="mb-3 text-warning">Edit Main Category</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MainCategoryId" />

    <div class="mb-3">
        <label asp-for="MainCategoryName" class="form-label"></label>
        <input asp-for="MainCategoryName" class="form-control" />
        <span asp-validation-for="MainCategoryName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Create" class="btn btn-secondary">Back</a>
</form>
