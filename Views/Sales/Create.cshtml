@model MIEL.web.Models.ViewModel.SaleCreateVM
@{
    ViewData["Title"] = "Sales";
    Layout = "_AdminLayout";
}

<style>
    :root {
        --primary: #0d6efd;
        --secondary: #6c757d;
        --success: #198754;
        --border: #dee2e6;
        --bg-light: #f8f9fa;
        --text-dark: #212529;
    }

    body {
        background-color: #f1f3f6;
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
        color: var(--text-dark);
        font-size: 14px;
    }

    .container {
        max-width: 1100px;
        margin: 40px auto;
    }

    .card {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0,0,0,.08);
        padding: 25px 30px;
    }

    h2 {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 25px;
        border-bottom: 1px solid var(--border);
        padding-bottom: 10px;
    }

    fieldset {
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
        background: var(--bg-light);
    }

    legend {
        font-size: 15px;
        font-weight: 600;
        padding: 0 10px;
        color: var(--primary);
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 15px;
    }

    .form-group {
        flex: 1;
        position: relative;
    }

    label {
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
        font-size: 13px;
    }

    input, select {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid var(--border);
        border-radius: 6px;
        font-size: 14px;
        transition: all .2s ease;
    }

        input:focus, select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(13,110,253,.15);
        }

        input[readonly] {
            background-color: #e9ecef;
        }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
    }

    thead th {
        background: #f1f5fb;
        font-weight: 600;
        font-size: 13px;
        padding: 10px;
        border-bottom: 1px solid var(--border);
    }

    tbody td {
        padding: 10px;
        border-bottom: 1px solid var(--border);
        font-size: 13px;
    }

    tbody tr:last-child td {
        border-bottom: none;
    }

    tbody tr:hover {
        background-color: #f8f9fa;
    }

    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        margin-top: 25px;
    }

    button {
        padding: 9px 18px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all .2s ease;
    }

    .btn-primary {
        background-color: var(--primary);
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
        }

    .btn-secondary {
        background-color: var(--secondary);
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5c636a;
        }

    .btn-success {
        background-color: var(--success);
        color: #fff;
    }

    /* AUTOCOMPLETE */
    .suggestions-box {
        position: absolute;
        top: calc(100% + 4px);
        left: 0;
        right: 0;
        background: #fff;
        border: 1px solid var(--border);
        border-radius: 6px;
        max-height: 220px;
        overflow-y: auto;
        z-index: 1000;
        display: none;
        box-shadow: 0 6px 18px rgba(0,0,0,.1);
    }

        .suggestions-box div {
            padding: 8px 12px;
            font-size: 13px;
            cursor: pointer;
        }

            .suggestions-box div:hover {
                background-color: #f1f5fb;
            }
</style>

<div class="container">
    <div class="card">
        <h2><i class="fas fa-shopping-cart me-2"></i>Create Sale</h2>

        <form method="post">

            <!-- SALE DETAILS -->
            <fieldset>
                <legend>Sale Details</legend>

                <div class="form-row">
                    <div class="form-group">
                        <label>Sale Code</label>
                        <input value="@Model.SaleCode" readonly />
                    </div>

                    <div class="form-group">
                        <label>Sale Date</label>
                        <input type="date" value="@Model.SaleDate.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </fieldset>

            <!-- CUSTOMER DETAILS -->
            <fieldset>
                <legend>Customer Details</legend>

                <div class="form-row">

                    <!-- CUSTOMER AUTOCOMPLETE -->
                    <div class="form-group" style="position:relative;">
                        <label>Customer Name</label>

                        <input type="text"
                               id="customerSearch"
                               placeholder="Type customer name..."
                               autocomplete="off" />

                        <input type="hidden" id="customerId" />

                        <div id="customerSuggestions" class="suggestions-box"></div>
                    </div>

                    <!-- MOBILE (AUTO-FILL) -->
                    <div class="form-group">
                        <label>Mobile</label>
                        <input type="text"
                               id="customerMobile"
                               placeholder="Mobile number"
                               readonly />
                    </div>

                </div>
            </fieldset>

            <!-- PRODUCT SELECTION -->
            <fieldset>
                <legend>Add Product</legend>

                <div class="form-row">

                    <!-- PRODUCT AUTOCOMPLETE -->
                    <div class="form-group" style="position:relative;">
                        <label>Product</label>
                        <input type="text" id="productSearch"
                               placeholder="Type product name..."
                               autocomplete="off" />

                        <input type="hidden" id="productId" />

                        <div id="productSuggestions" class="suggestions-box"></div>
                    </div>

                    <div class="form-group">
                        <label>Color</label>
                        <select>
                            <option>-- Select Color --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Size</label>
                        <select>
                            <option>-- Select Size --</option>
                        </select>
                    </div>

                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label>Available Qty</label>
                        <input readonly />
                    </div>

                    <div class="form-group">
                        <label>Available Discount</label>
                        <input readonly />
                    </div>

                    <div class="form-group">
                        <label>Unit Price</label>
                        <input readonly />
                    </div>

                    <div class="form-group">
                        <label>Required Qty</label>
                        <input type="number" min="1" />
                    </div>

                    <div class="form-group">
                        <label>Amount</label>
                        <input readonly />
                    </div>
                </div>

                <button type="button" class="btn-primary">Add Item</button>
            </fieldset>

            <!-- SALE ITEMS -->
            <fieldset>
                <legend>Sale Items</legend>

                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Color</th>
                            <th>Size</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Kurti</td>
                            <td>Black</td>
                            <td>S</td>
                            <td>2</td>
                            <td>1200</td>
                            <td>2400</td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>

            <!-- ACTIONS -->
            <div class="actions">
                <button class="btn-secondary" name="action" value="Draft">Save Draft</button>
                @*    <button class="btn-success" name="action" value="Completed">Complete Sale</button> *@
            </div>

        </form>
    </div>
</div>


<script>
    document.getElementById('productSearch').addEventListener('keyup', function () {

        const term = this.value.trim();
        const box = document.getElementById('productSuggestions');

        if (term.length === 0) {
            box.style.display = 'none';
            return;
        }

        fetch(`/Sale/SearchProducts?term=${encodeURIComponent(term)}`)
            .then(res => res.json())
            .then(data => {

                box.innerHTML = '';

                if (data.length === 0) {
                    box.style.display = 'none';
                    return;
                }

                data.forEach(p => {
                    const div = document.createElement('div');
                    div.textContent = p.productName;
                    div.onclick = function () {
                        document.getElementById('productSearch').value = p.productName;
                        document.getElementById('productId').value = p.productId;
                        box.style.display = 'none';
                    };
                    box.appendChild(div);
                });

                box.style.display = 'block';
            });
    });
</script>

<script>
    document.getElementById('customerSearch').addEventListener('keyup', function () {

        const term = this.value.trim();
        const box = document.getElementById('customerSuggestions');

        if (term.length === 0) {
            box.style.display = 'none';
            return;
        }

        fetch(`/Sales/SearchCustomer?term=${encodeURIComponent(term)}`)
            .then(res => res.json())
            .then(data => {

                box.innerHTML = '';

                if (data.length === 0) {
                    box.style.display = 'none';
                    return;
                }

                data.forEach(c => {
                    const div = document.createElement('div');
                    div.textContent = `${c.name} (${c.mobile})`;

                    div.onclick = function () {
                        document.getElementById('customerSearch').value = c.name;
                        document.getElementById('customerId').value = c.customerId;
                        document.getElementById('customerMobile').value = c.mobile;
                        box.style.display = 'none';
                    };

                    box.appendChild(div);
                });

                box.style.display = 'block';
            });
    });
</script>